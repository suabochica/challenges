{
  "compilerOptions": {
    "moduleDetection": "force",
    "composite": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noErrorTruncation": true,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "noEmit": false,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "NodeNext",
    "incremental": true,
    "paths": {
      "file-processing/*": ["./packages/meli-backend/file-processing/src/*"],
      "file-processing/": ["./packages/meli-backend/file-processing/src/main"],

      "meli-request/*": ["./packages/meli-backend/meli-request/src/*"],
      "meli-request/": ["./packages/meli-backend/meli-request/src/main"],
    },
    "plugins": [{ "name": "@effect/language-service" }]
  },
  "exclude": ["node_modules", "build"]
}